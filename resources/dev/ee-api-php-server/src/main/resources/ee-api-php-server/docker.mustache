FROM php:8.1.11-fpm-bullseye

RUN apt-get update --allow-releaseinfo-change \
    && apt-get upgrade  -y \
    && apt-get install -y libpq-dev php8.1-pdo-pgsql make gcc \
    && apt-get clean -y
RUN echo "zend_extension=/usr/lib/php/20210902/xdebug.so" > /etc/php/8.1/mods-available/xdebug.ini \
    && echo "xdebug.discover_client_host=0" >> /etc/php/8.1/mods-available/xdebug.ini \
    && echo "xdebug.client_host=host.docker.internal" >> /etc/php/8.1/mods-available/xdebug.ini \
    && echo "xdebug.mode=debug" >> /etc/php/8.1/mods-available/xdebug.ini \
    && echo "xdebug.output_dir=/var/www/var/xdebug" >> /etc/php/8.1/mods-available/xdebug.ini \
    && sed -i '/^error_reporting/c\error_reporting = E_ALL & ~E_DEPRECATED & ~E_USER_DEPRECATED & ~E_STRICT' /etc/php/8.1/fpm/php.ini \
    && sed -i '/^error_reporting/c\error_reporting = E_ALL & ~E_DEPRECATED & ~E_USER_DEPRECATED & ~E_STRICT' /etc/php/8.1/cli/php.ini
RUN curl -1sLf 'https://dl.cloudsmith.io/public/symfony/stable/setup.deb.sh' | bash \
    && apt install symfony-cli

WORKDIR /var/www